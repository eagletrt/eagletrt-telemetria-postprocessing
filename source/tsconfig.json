{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ES5",
        "lib": ["ES2020"],
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "declaration": true,
        "paths": {
            "@/*": ["./*"],
            "@lib/*": ["./lib/*"],
            "@bin/*": ["./bin/*"],
            "@lib": ["./lib"],
            "@bin": ["./bin"]
        },
        "outDir": "../dist"
    },
}